<p id="notice"><%= notice %></p>
<div class="col-8 offset-2">
<%= link_to 'Edit', edit_search_term_path(@search_term) %> |
<%= link_to 'Back', search_terms_path %>
<p>
  <strong>Term:</strong>
  <%= @search_term.term %>
</p>

<p>
  <strong>Timespan:</strong>
  <%= @search_term.timespan %>
</p>

<p>
  <strong>Last check:</strong>
  <%= @search_term.last_check %>
</p>

<p>
  <strong>Check frequency:</strong>
  <%= @search_term.check_frequency %>
</p>

<h1 >Search Results</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Total</th>
      <th scope="col">Created At</th>
      <th scope="col">Show</th>
      <th scope="col">Edit</th>
      <th scope="col">Destroy</th>
    </tr>
  </thead>
  <tbody>
    <% @search_results.each do |search_result| %>
      <tr>
        <td><%= search_result.total %></td>
        <td><%= search_result.created_at.to_formatted_s(:long) %></td>
        <td><%= link_to 'Show', search_result %></td>
        <td><%= link_to 'Edit', edit_search_result_path(search_result) %></td>
        <td><%= link_to 'Destroy', search_result, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


